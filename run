#!/usr/bin/env bash

RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m'

script_dir=$(cd $(dirname "${BASH_SOURCE[0]}") && pwd)
filter=""
dry="0"
scripts=""

while [[ $# > 0 ]]; do
  if [[ $1 == "--dry" ]]; then
    dry="1"
  else
    filter="$1"
  fi
  shift
done

log() {
  if [[ $dry == "1" ]]; then
    echo -e "${RED}[DRY RUN]:${NC} $@"
  else
    echo -e "$@"
  fi
}

execute() {
  log "${GREEN}execute $@${NC}"
  if [[ $dry == "1" ]]; then
    return
  fi
  "$@"
}

cd $script_dir
if [[ $filter == "" || $filter == "init" ]]; then
  execute ./actions/_init
fi

if [[ $filter == "" ]]; then
  scripts=$(find ./actions -mindepth 1 -maxdepth 1 -executable -type f -not -name '_*')
else
  scripts=$(find ./actions -mindepth 1 -maxdepth 1 -executable -type f -not -name '_init')
fi

for script in $scripts; do
  if (echo "$script" | grep -qv "$filter"); then
    continue;
  fi

  execute $script
done
